// Generic

$body-size ?= 16px

// Colors

$slate        ?= #29334C
$navy         ?= #011627

$coinme       ?= (#59BC6C #157E35)

$black        ?= hsl(0, 0%, 4%)
$black-bis    ?= hsl(0, 0%, 7%)
$black-ter    ?= hsl(0, 0%, 14%)

$grey-darker  ?= hsl(0, 0%, 21%)
$grey-dark    ?= hsl(0, 0%, 29%)
$grey         ?= hsl(0, 0%, 48%)
$grey-light   ?= hsl(0, 0%, 71%)
$grey-lighter ?= hsl(0, 0%, 86%)

$white-ter    ?= hsl(0, 0%, 96%)
$white-bis    ?= hsl(0, 0%, 98%)
$white        ?= hsl(0, 0%, 100%)

$orange       ?= hsl(14,  100%, 53%)
$yellow       ?= hsl(48,  100%, 67%)
$green        ?= hsl(141, 71%,  48%)
$turquoise    ?= hsl(171, 100%, 41%)
$cyan         ?= hsl(204, 86%,  53%)
$blue         ?= #0063FF
$purple       ?= hsl(271, 100%, 71%)
$red          ?= hsl(348, 100%, 61%)

// Typography
/*
 * Fonts
 */

$family-sans-serif ?= "Wavehaus", BlinkMacSystemFont, -apple-system, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif
$family-monospace ?= monospace
$render-mode ?= optimizeLegibility

$size-1 ?= 3rem
$size-2 ?= 2.5rem
$size-3 ?= 2rem
$size-4 ?= 1.5rem
$size-5 ?= 1.25rem
$size-6 ?= 1rem
$size-7 ?= 0.75rem

$weight-100    ?= 100
$weight-300    ?= 300
$weight-500    ?= 500
$weight-600    ?= 600
$weight-700    ?= bold
$weight-800    ?= 800

// Responsiveness

// The container horizontal gap, which acts as the offset for breakpoints
$gap ?= 2 * $body-size
// 960, 1152, and 1344 have been chosen because they are divisible by both 12 and 16
$tablet ?= 769px
// 960px container + 4rem
$desktop ?= 960px + (2 * $gap)
// 1152px container + 4rem
$widescreen ?= 1152px + (2 * $gap)
$widescreen-enabled ?= true
// 1344px container + 4rem
$fullhd ?= 1344px + (2 * $gap)
$fullhd-enabled ?= true
// 2112px container + 4rem
$4k ?= 2112px + (2 * $gap)
$4k-enabled ?= true

// Miscellaneous

$easing         ?= ease-out
$radius-small   ?= (2/$body-size)rem
$radius         ?= (4/$body-size)rem
$radius-large   ?= (6/$body-size)rem
$radius-rounded ?= 100vh
$speed          ?= 86ms

// Flags

$variable-columns ?= true
